<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/native_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Ads"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/app_open_ads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <Button
        android:id="@+id/app_open_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Open Ads"
        app:layout_constraintTop_toBottomOf="@id/native_ads"
        app:layout_constraintBottom_toTopOf="@id/banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

      />

    <Button
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banner"
        app:layout_constraintTop_toBottomOf="@id/app_open_ads"
        app:layout_constraintBottom_toTopOf="@id/interstisial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
      />

    <Button
        android:id="@+id/interstisial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interstisial"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>